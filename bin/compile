#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2


echo "[FreeTfDS]
Description=FreeTDS Driver
Driver=/app/.apt/usr/lib/x86_64-linux-gnu/odbc/libtdsodbc.so
Setup=/app/.apt/usr/lib/x86_64-linux-gnu/odbc/libtdsS.so
" > $BUILD_DIR/.apt/usr/share/tdsodbc/odbcinst.ini

cat $BUILD_DIR/.apt/usr/share/tdsodbc/odbcinst.ini